@model StudentEditVM
@{
    ViewData["Title"] = "Edit";
}
<main style="margin-top: 70px; margin-left:60px;">

    <div class="container mt-5">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">

                <label class="mt-5" for="category">FullName</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input asp-for="FullName" class="form-control form-bg-light" maxlength="100" placeholder="Name...">
              
                <label class="mt-5" for="category">Profession</label>
                <span asp-validation-for="Profession" class="text-danger"></span>
                <input asp-for="Profession" class="form-control form-bg-light" maxlength="100" placeholder="Name...">
                
                <label class="mt-5" for="category">Biograpy</label>
                <span asp-validation-for="Biography" class="text-danger"></span>
                <input asp-for="Biography"  class="form-control form-bg-light" >

                <label for="category">Image</label>
                <span asp-validation-for="NewImage" class="text-danger"></span>
                <input class="form-control form-bg-light" type="file" asp-for="NewImage">

            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
        </form>
    </div>
</main>

