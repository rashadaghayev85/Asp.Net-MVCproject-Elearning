@model Contact
@{
    ViewData["Title"] = "Detail";
}

<main style="margin-top: 70px; margin-left:60px;">

	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						<h1>User</h1>
						<p>@Model.UserName</p>
						<div class="preview-pic tab-content">
							 <h2>Subject</h2>
							 <p>@Model.Subject</p>

					</div>
					<div class="details col-md-6">
						<h2>Message</h2>
						<p class="product-title">@Model.Message</p>
						
						
						<a asp-action="Index" class="btn btn-light mr-2">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>


