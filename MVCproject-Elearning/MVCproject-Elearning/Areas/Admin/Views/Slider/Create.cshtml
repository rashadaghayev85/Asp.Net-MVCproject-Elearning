@model SliderCreateVM

@{
    ViewData["Title"] = "Create";
}

<main style="margin-top: 58px; margin-left:60px;">

    <div class="container mt-5">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label class="mt-5" for="category">Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
                <input asp-for="Title" class="form-control form-bg-light" maxlength="100" placeholder="Title...">

                <label class="mt-5" for="category">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control form-bg-light" maxlength="100" placeholder="Description...">

                <label class="mt-5" for="category">Slider</label>

                <input class="form-control form-bg-light" asp-for=Image maxlength="100" placeholder="Category...">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button  type="submit" class="btn btn-primary mr-2 mt-5">Submit</button>
            <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
        </form>
    </div>

</main>