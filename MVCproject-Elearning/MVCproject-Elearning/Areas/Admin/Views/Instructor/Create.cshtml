@model InstructorCreateVM
@{
    ViewData["Title"] = "Create";
}

<main style="margin-top: 70px; margin-left:60px;">
    <div class="container mt-5">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="category">Image</label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input class="form-control form-bg-light" type="file" asp-for="Image" maxlength="100" placeholder="Category...">
                <label class="mt-5" for="category">FullName</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input asp-for="FullName" class="form-control form-bg-light" maxlength="100" placeholder="Title...">
                <label class="mt-5" for="category">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control form-bg-light" maxlength="100" placeholder="Description...">
                <label class="mt-5" for="category">Designation</label>
                <span asp-validation-for="Designation" class="text-danger"></span>
                <input asp-for="Designation" class="form-control form-bg-light" maxlength="100" placeholder="Designation...">

                
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
        </form>
    </div>
</main>

