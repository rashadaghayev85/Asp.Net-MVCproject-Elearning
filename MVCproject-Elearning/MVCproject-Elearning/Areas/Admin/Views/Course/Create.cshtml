@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<main style="margin-top: 70px; margin-left:60px;">
    <div class="container mt-5">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="category">Name</label>
                <input asp-for="Name" class="form-control form-bg-light">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="category">Duration</label>
                <input asp-for="Duration" class="form-control form-bg-light">
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="category">Rating</label>
                <input asp-for="Rating" type="number" class="form-control form-bg-light">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="category">Price</label>
                <input asp-for="Price" type="number" step="any" class="form-control form-bg-light">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label for="category">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
            </div>
            <div class="form-group mt-5">
                <label for="category">Instructor</label>
                <select asp-for="InstructorId" asp-items="@ViewBag.instructor" class="form-control"></select>
            </div>

            <div class="form-group mt-5">
                <label for="category">Images</label>
                @* inputun attributuuna accept="image/*"(* yerine png falanda yazmaq olur) versek yalniz image qebul edecek *@
                @* multiple atributu ile bir nece sekil secmek olur *@
                <input class="form-control form-bg-light" asp-for="Images">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2 mt-5">Submit</button>
            <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
        </form>
    </div>
</main>

