@model CourseDetailVM
@{
    ViewData["Title"] = "Detail";
}

<main style="margin-top: 70px; margin-left:60px;">

	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">

						<div class="preview-pic tab-content">
							@foreach (var item in Model.Images)
							{
								<div class="tab-pane active  @(item.IsMain ? "" :"d-none")" id="pic-1"><img src="~/img/@item.Image" /></div>

							}


						</div>
						@* <ul class="preview-thumbnail nav nav-tabs">
							@foreach (var item in Model.Images)
							{
								<li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="~/img/@item.Image" style="@(item.IsMain ? "d-none":"")" /></a></li>

							}
						</ul> *@

					</div>
					<div class="details col-md-6">
						<h3 class="product-title">@Model.Name</h3>
						@if (Model.Rating == 5)
						{
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>

						}
						@if (Model.Rating == 4)
						{
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>


						}
						@if (Model.Rating == 3)
						{
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>

						}
						@if (Model.Rating == 2)
						{
							<small class="fa fa-star text-primary"></small>
							<small class="fa fa-star text-primary"></small>

						}
						@if (Model.Rating == 1)
						{
							<small class="fa fa-star text-primary"></small>

						}
						<p class="product-description">Duration:@Model.Duration</p>
						<p class="product-description">Student Count:@Model.StudentCount</p>
						<p class="product-description">Instructor:@Model.Instructor</p>
						<h4 class="price">Category: <span>@Model.Category</span></h4>
						<h4 class="price">Price: <span>$@Model.Price</span></h4>
						
						<a asp-action="Index" class="btn btn-light mr-2">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

