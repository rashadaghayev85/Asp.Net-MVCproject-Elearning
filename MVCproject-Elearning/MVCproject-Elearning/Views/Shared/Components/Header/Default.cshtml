@model HeaderVM

<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <h2 class="m-0 text-primary">
            <img style="height:80px" src="~/img/@Model.Settings["HeaderLogo"]"  />
        </h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="index.html" class="nav-item nav-link active">Home</a>
            <a href="about.html" class="nav-item nav-link">About</a>
            <a href="courses.html" class="nav-item nav-link">Courses</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Account</a>
                <div class="dropdown-menu fade-down m-0">
                   


                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="team.html" class="dropdown-item">Login</a>
                        <a href="testimonial.html" class="dropdown-item">Register</a>
                        <a class="list-group-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" href="#">LogOut</button>
                            </form>
                        </a>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                                <a asp-area="admin" asp-controller="dashboard" asp-action="index" class="dropdown-item">Admin Panel</a>
                        }


                    }
                    else
                    {

                        <li class="list-group-item"><a asp-controller="account" asp-action="signup">SignUp</a></li>
                        <li class="list-group-item"><a asp-controller="account" asp-action="signin">SignIn</a></li>
                    }
                </div>
            </div>
            <a  asp-controller="contact" asp-action="index" class="nav-item nav-link">Contact</a>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block"><i class="fa-solid fa-user"></i>@Model.User.FullName</a>
        }
        else
        {
            <a href="" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block"><i style="margin-left:20px" class="fa-solid fa-user"></i>Profile</a>
            
        }
    </div>
</nav>